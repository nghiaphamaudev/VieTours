extends base
block banner 
    include _bannerAbout
block box_search
    section.ftco-section.ftco-no-pb
        .container
            .row
                .col-md-12
                    .search-wrap-1.ftco-animate
                        form.search-property-1(action='#')
                            .row.no-gutters
                                .col-lg.d-flex
                                    .form-group.p-4.border-0
                                        label(for='#') Destination
                                        .form-field
                                            .icon
                                                span.fa.fa-search
                                            input.form-control(type='text' placeholder='Search place')
                                .col-lg.d-flex
                                    .form-group.p-4
                                        label(for='#') Check-in date
                                        .form-field
                                            .icon
                                                span.fa.fa-calendar
                                            input.form-control.checkin_date(type='text' placeholder='Check In Date')
                                .col-lg.d-flex
                                    .form-group.p-4
                                        label(for='#') Check-out date
                                        .form-field
                                            .icon
                                                span.fa.fa-calendar
                                            input.form-control.checkout_date(type='text' placeholder='Check Out Date')
                                .col-lg.d-flex
                                    .form-group.p-4
                                        label(for='#') Price Limit
                                        .form-field
                                            .select-wrap
                                                .icon
                                                    span.fa.fa-chevron-down
                                                select.form-control(name='' id='')
                                                    option(value='') $5,000
                                                    option(value='') $10,000
                                                    option(value='') $50,000
                                                    option(value='') $100,000
                                                    option(value='') $200,000
                                                    option(value='') $300,000
                                                    option(value='') $400,000
                                                    option(value='') $500,000
                                                    option(value='') $600,000
                                                    option(value='') $700,000
                                                    option(value='') $800,000
                                                    option(value='') $900,000
                                                    option(value='') $1,000,000
                                                    option(value='') $2,000,000
                                .col-lg.d-flex
                                    .form-group.d-flex.w-100.border-0
                                        .form-field.w-100.align-items-center.d-flex
                                            input.align-self-stretch.form-control.btn.btn-primary(type='submit' value='Search')

block content_1 
    include _overviewDestion
block content_2 
    include _askFor
