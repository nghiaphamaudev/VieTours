nav#ftco-navbar.navbar.navbar-expand-lg.navbar-dark.ftco_navbar.bg-dark.ftco-navbar-light
    .container
        a.navbar-brand(href='index.html')
            | Vie
            span Travel Agency
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#ftco-nav' aria-controls='ftco-nav' aria-expanded='false' aria-label='Toggle navigation')
            span.oi.oi-menu
            |  Menu
        #ftco-nav.collapse.navbar-collapse
            ul.navbar-nav.ml-auto
                li.nav-item
                    a.nav-link(href='/home') Home
                li.nav-item.active
                    a.nav-link(href='/about') About
                li.nav-item
                    a.nav-link(href='/destination') Destination
                li.nav-item
                    a.nav-link(href='/hotel') Hotel
                li.nav-item
                    a.nav-link(href='/blog') Blog
                li.nav-item
                    a.nav-link(href='/contact') Contact
                if user 
                    li.nav-item
                        a.nav-link(href='/about-me')
                            img.rounded-circle(src=`/images/users/${user.photo}` style='width: 32px;' alt='Avatar')
                            span.ml-2= `Hello, ${user.fullName.split(' ').splice(1,2).join(' ')}`
                else
                    li.nav-item
                        a.nav-link(href='/login')
                            i.fa-solid.fa-user
                        


